@page
@model RegisterModel
@{
    ViewData["Title"] = "اشتراك جديد";
}

<h1 style="font-family: Cairo; direction:rtl">@ViewData["Title"]</h1>

<div class="row container" style="font-family: Cairo; direction:rtl">
    <div class="col-md-4" >
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" >
            <h2 style="font-family: Cairo;">إنشاء حساب جديد</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" style="direction:rtl">
                <input asp-for="Input.FullName" class="form-control mb-1" autocomplete="username" aria-required="true" />
                <label asp-for="Input.FullName"></label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-floating" style="direction:rtl">
                <input asp-for="Input.Email" class="form-control mb-1" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control"style="margin-top:5px" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button style="font-family: Cairo, sans-serif; margin-top:20px" id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">اشتراك</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
