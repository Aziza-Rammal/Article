@model IEnumerable<ArticlProjectMVC.Core.Models.AuthorPost>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="font-family:Cairo">بيانات المشاركات</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="font-family: cairo;">مشاركة جديدة</a>
</p>
<br />
<form method="get" asp-action="Search">
    <input type="search" name="SearchItem" placeholder="البحث عن طريق العنوان" class="search-field" />
    <input type="submit" value="بحث" class="btn-primary" />
</form>
<br />
<br />
<table class="table table-striped table-hover">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Author)
            </th>*@

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostDescription)
                </td>
                <td>
                    <img src="~/Images/@item.PostImageUrl" class="rounded-circle" width="50" height="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedDate)
                </td>
               @* <td>
                    @Html.DisplayFor(modelItem => item.Author.FullName)
                </td>*@

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    if (Model.ToList().Count < 5)
    {
        int id = 0;
        <a asp-action="Index" asp-route-id="@id">الصفحة الأولى</a>
    }
    else
    {
        <a asp-action="Index" asp-route-id="@Model.ToList().Last().Id">التالي</a>
    }

}