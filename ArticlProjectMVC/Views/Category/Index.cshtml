@model IEnumerable<ArticlProjectMVC.Core.Models.Category>

@{
    ViewData["Title"] = "قائمة الأصناف";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="font-family: cairo;">قائمة الأصناف</h1>

<p>
    <a class="btn btn-primary" style="font-family: cairo;"asp-controller="Category" asp-action="Create">إضافة صنف جديد</a>
</p>
<form asp-action="Search" method="get">
    <input type="search" name="SearchItem" class="search-field" />
    <input type="submit" value="بحث" class="btn btn-light " style="background:blue" /> 
</form>
<table class="table table-striped table-hover" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    if(Model.ToList().Count<5)
    {
        int id = 0;
        <a asp-action="Index" asp-route-id="@id">الصفحة الأولى</a>
    }
    else
    {
        <a asp-action="Index" asp-route-id="@Model.ToList().Last().Id">التالي</a>
    }
    
}

